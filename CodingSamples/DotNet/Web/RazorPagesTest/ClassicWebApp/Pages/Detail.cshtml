@page
@model ClassicWebApp.Pages.DetailModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>
    <head>
        <title>ClassicWebApp</title>
    </head>
    <body>
        <h1>Welcome Customer @Model.LoggedCustomer.Id</h1>
        <h3>Your Invoice</h3>
        <table border="1">
            <tr>
                <th>Product No</th>
                <th>Quantity</th>
                <th>Order Date</th>
            </tr>
            @foreach (var item in Model.LoggedCustomer.Orders)
            {
                <tr>
                    <td>@item.ProductNo</td>
                    <td>@item.Quantity</td>
                    <td>@item.OrderDate.ToString("dd-MMM-yyyy")</td>
                </tr>
            }
        </table>
        <p>
            <a asp-page-handler="logout">Logout</a>
        </p>
    </body>
</html>
